#=
test1::Int = 1
while(test1 <= 10)   
    println(test1)
    if test1 == 7
        println("Aqui paro en 7")
        break
    end
    test1 = test1 + 1
end
=#

# While loops loop while a condition is true
function while_func()::Int
    x::Int = 0
    while x < 4
        println(x)
        x = x + 1
    end
    return x
end

println(while_func())
# prints:
#   0
#   1
#   2
#   3
#   4